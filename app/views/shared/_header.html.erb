<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='search-bar-contents'>
    <%= link_to image_tag("furima-logo-color.png", class:"furima-icon"), "/" %>
    <div class="search-part">
    <%= search_form_for Item.ransack(params[:q]), url: search_items_path, html: {class: "search-form"} do |f| %>
      <%= f.text_field :name, placeholder: '商品名から探す', class: 'input-box',id: "input-box" %>
      <br>
        <input type="submit" value="検索" class="send">
        <%= f.submit :submit, id: "q_submit", style: "display: none;"%>
    <% end %>
      </button>
    </form>
    <div id="search-result">
    </div>
    </div>
  </div>
  <div class='nav'>
    <ul class='lists-left'>
      <li><%= link_to '商品検索', search_items_path, class: "category-list" %></li>
      <li><%= link_to 'カテゴリー', "#", class: "category-list" %></li>
      <li><%= link_to 'ブランド', "#", class: "brand-list" %></li>
    </ul>
     <% if user_signed_in? %>
      <ul class='lists-right'>
        <li><%= link_to current_user.nickname, user_path(current_user.id), class: "user-nickname"  %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li> 
      </ul>
    <% else %>
      <ul class='lists-right'>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_path, class: "sign-up" %></li>
      </ul>
    <% end %>
  </div>
</header>